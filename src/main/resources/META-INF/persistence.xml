<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">

	<persistence-unit name="HibernateJPA"
		transaction-type="RESOURCE_LOCAL">
		<description>
            Persistence unit that uses Hibernate as JPA provider; has RESOURCE_LOCAL transaction type
        </description>

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>com.georgiimalyshev.storestudy.service.domain.users.AppUserAbstract</class>
		<class>com.georgiimalyshev.storestudy.service.domain.users.Customer</class>
		<class>com.georgiimalyshev.storestudy.service.domain.store.Cart</class>

		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />

			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://127.0.0.1:5432/storedb_dev" />

			<property name="javax.persistence.jdbc.user"
				value="storedev" />

			<property name="javax.persistence.jdbc.password"
				value="wPJc7XFf" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQL10Dialect" />

			<property name="hibernate.show_sql" value="true" />

			<property name="hibernate.format_sql" value="true" />

			<property name="hibernate.use_sql_comments" value="true" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>

	</persistence-unit>

</persistence>